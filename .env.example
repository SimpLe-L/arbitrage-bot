# AVAX MEV套利机器人配置文件
# 复制此文件为 .env 并填入实际值

# ========== 网络配置 ==========
# AVAX主网RPC URL
AVAX_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# AVAX Websocket URL (用于mempool监听)
AVAX_WS_URL=wss://api.avax.network/ext/bc/C/ws

# ========== 钱包配置 ==========
# 私钥 (不要包含0x前缀)
AVAX_PRIVATE_KEY=your_private_key_here

# 钱包地址 (用于验证)
WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# ========== 合约配置 ==========
# 套利执行合约地址
ARB_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Aave V3 Pool地址 (AVAX主网)
AAVE_V3_POOL=0x794a61358D6845594F94dc1DB02A252b5b4814aD

# ========== 套利参数 ==========
# 最大跳跃数 (DEX路径深度)
MAX_HOPS=2

# 最小利润 (wei, 18位小数)
MIN_PROFIT=10000000000000000

# 最大交易金额 (wei, 18位小数)
MAX_AMOUNT=1000000000000000000

# Gas限制
GAS_LIMIT=300000

# Gas价格 (gwei)
GAS_PRICE=25

# ========== 性能配置 ==========
# 工作线程数
WORKER_THREADS=8

# 模拟器池大小
SIMULATOR_POOL_SIZE=16

# 最近套利缓存大小
MAX_RECENT_ARBS=20

# ========== 监控配置 ==========
# 是否启用详细日志
ENABLE_DEBUG_LOG=true

# 心跳间隔(秒)
HEARTBEAT_INTERVAL=30

# ========== 可选配置 ==========
# Telegram通知 (可选)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# 是否使用闪电贷
USE_FLASHLOAN=true

# 滑点容忍度 (基点, 100 = 1%)
SLIPPAGE_TOLERANCE=100
